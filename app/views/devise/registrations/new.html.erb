<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", require: true,  placeholder: "Name", class: "text_field" %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", require: true,  placeholder: "Email", class: "text_field" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", require: true, placeholder: "Password", class: "text_field" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm password", class: "text_field" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "sign-btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
